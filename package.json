{
    "name": "vscode-extend-language",
    "version": "0.3.0",
    "description": "Utility to generate a new language configuration file for VS Code by extending an existing one.",
    "type": "module",
    "exports": {
        ".": {
            "import": "./index.js",
            "types": "./types/index.d.ts"
        }
    },
    "files": [
        "index.js",
        "types",
        "*.md"
    ],
    "engines": {
        "node": ">=16"
    },
    "types": "types/index.d.ts",
    "scripts": {
        "test": "ava",
        "build": "tsc -p ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jlelong/vscode-extend-language.git"
    },
    "keywords": [
        "vscode",
        "vs",
        "code",
        "visual",
        "studio",
        "code",
        "language",
        "configuration",
        "json",
        "extensions"
    ],
    "author": "Jérôme Lelong",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jlelong/vscode-extend-language/issues"
    },
    "homepage": "https://github.com/jlelong/vscode-extend-language#readme",
    "ava": {
        "files": [
            "test/*.js"
        ]
    },
    "devDependencies": {
        "@types/node": "^20.17.11",
        "ava": "6.2.0",
        "strip-json-comments": "5.0.1",
        "eslint": "^9.17.0",
        "typescript": "^5.7.3"
    }
}
